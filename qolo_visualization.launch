<launch>
  <arg name="model" default="$(find qolo_fastmod)/visualization/urdf/qolo_fastmod.urdf"/>
  <!-- <arg name="gui" default="true" /> -->
  <arg name="rvizconfig" default="$(find qolo_fastmod)/visualization/qolo_rviz_all.rviz" />

  <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)" />
  <!-- <param name="use_gui" value="$(arg gui)"/> -->

  <!-- TODO: should be part of autogenerated xacro.. -->
  <node pkg="tf" type="static_transform_publisher"
        name="tf_wheel_right" args="0 0.2 0 0 0 0 /tf_qolo /wheel_right 100"/>
  <node pkg="tf" type="static_transform_publisher"
        name="tf_wheel_left" args="0 -0.2 0 0 0 0 /tf_qolo /wheel_left 100"/>
  <node pkg="tf" type="static_transform_publisher"
        name="tf_bumper" args="0.035 0 0.015 0 0 0 /tf_qolo /bumper 100"/>
  
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />
</launch>
